#include<iostream>
using namespace std;
const int N = 105;
int dp[15][105];//dp[i] 
int w[15],c[15];

int main()
{
	int n,m;
	cin>>n>>m;
	for(int i=1;i<=n;i++)
		cin>>w[i]>>c[i];
	for(int i=1;i<=n;i++)
	{
		for(int j=1;j<=m;j++)
		{
			if(w[i]<=j)	dp[i][j]=max(dp[i-1][j],dp[i-1][j-w[i]]+c[i]);
			else dp[i][j]=dp[i-1][j];
		}
	}
	cout<<dp[n][m];
	return 0;
}
