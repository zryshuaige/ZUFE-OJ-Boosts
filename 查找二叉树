#include<bits/stdc++.h>
using namespace std;
int n,x,cnt,f=1;
struct node
{
	int left,right,data;
}a[105];

void dfs(int r,int x)
{
	if(!f)	return;
	if(a[r].left)	
		dfs(a[r].left,x); 
	cnt++;
	if(a[r].data==x)
	{
		cout<<cnt;f=0;return;
	}
	if(a[r].right)	
		dfs(a[r].right,x); 
}

int main(void)
{
	cin>>n;cin>>x;
	for(int i=1;i<=n;i++)	
		cin>>a[i].data>>a[i].left>>a[i].right;
	dfs(1,x);
	return 0;
}
