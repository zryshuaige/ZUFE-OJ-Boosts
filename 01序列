#include<iostream>
#include<algorithm>
#include<cstring>
#define int long long
using namespace std;
const int N = 1e6 + 10;
int a[N];
int cnt;
signed main()
{
    int k;
    string s;
    cin >> k >> s;
    for (int i = 0; i < s.size(); i++) {
        if (s[i] == '1') {
            cnt++;
            a[cnt] = i;
        }
    }
    int res = 0;
    a[0] = -1;
    if (k == 0) {
        for (int i = 1; i <= cnt; i++) {
            for (int j = a[i - 1] + 1; j <= a[i] - 1; j++) {
                res += a[i] - j;
            }
        }
        for (int j = a[cnt] + 1; j < s.size(); j++) {
            res += s.size() - j;
        }
 
    }
    else
    for (int i = 1; i <= cnt; i++) {
        if (i + k-1 <= cnt) {
            if(i+k<=cnt)
            res += (a[i] - a[i - 1]) * (a[i + k] - a[i + k - 1]);
            else {
                res+= (a[i] - a[i - 1]) * (s.size() - a[i + k - 1]);
            }
        }
    }
    cout << res << endl;
}
