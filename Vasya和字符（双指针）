 #include<iostream>
#include<string.h>
using namespace std;
const int N = 1e5+10;

int main()
{
	
	int n,k,ans1=1,ans2=1;
	cin>>n>>k;
	string s;
	cin>>s;
	s=" "+s;

	int sum=0,j=0;
	for(int i=1;i<=n;i++)//搜索a
	{
		if(s[i]=='b')sum++;
		while(sum>k&&j<i)
		{
		    j++;
		    if(s[j]=='b')   sum--;
		}
		ans1=max(ans1,i-j);
	}
	sum=0,j=0;
	for(int i=1;i<=n;i++)//搜索b
	{
	    if(s[i]=='a')   sum++;
	    while(sum>k&&j<i)
	    {
	        j++;
	        if(s[j]=='a')   sum--;
	    }
	    ans2=max(ans2,i-j);
	}
	cout<<max(ans1,ans2);
	return 0;
}
