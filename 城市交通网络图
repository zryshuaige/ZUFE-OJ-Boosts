#include<iostream>
using namespace std;
const int N = 105;
int dp[105];//dp[i] 
int a[N][N];

int main()
{
	int n;
	cin>>n;
	for(int i=1;i<=n;i++)
		for(int j=1;j<=n;j++)cin>>a[i][j];
		
	for(int i=1;i<=n;i++)	dp[i]=1e9;
	dp[1]=0;	
	for(int i=1;i<=n;i++)
	{
		for(int j=1;j<i;j++)
		{
			if(a[i][j]!=0)dp[i]=min(dp[j]+a[i][j],dp[i]);
		}
	}
	cout<<dp[n];
	return 0;
}
